@{
    ViewData["Title"] = "Paralel Veri Çekme Sonucu";
    Layout = "_Layout";  // varsa layout dosyan, yoksa kaldırabilirsin
}

<h2>@ViewData["Title"]</h2>

<div class="card mt-3">
    <div class="card-body">
        <h5 class="card-title">API'den Gelen Sonuç:</h5>

        @if (ViewBag.ResultJson != null)
        {
            <pre style="background-color:#f5f5f5; padding:15px; border-radius:6px; max-height:600px; overflow:auto;">
    @Html.Raw(Newtonsoft.Json.Linq.JToken.Parse(ViewBag.ResultJson).ToString(Newtonsoft.Json.Formatting.Indented))
                </pre>
        }
        else
        {
            <p class="text-danger">Henüz veri alınamadı.</p>
        }
    </div>
</div>
