@using Ecommerce.ViewModels;
@model Ecommerce.ViewModels.ResultViewModel;

<h2>Companies</h2>
<ul>
    @foreach (var company in Model.CompanyViewModels)
    {
        <li>@company.CompanyName - @company.CompanyDescription</li>
    }
</ul>

<h2>Customers</h2>
<ul>
    @foreach (var customer in Model.CustomerViewModels)
    {
        <li>@customer.CustomerName - @customer.CustomerDescription</li>
    }
</ul>

<h2>Orders</h2>
<ul>
    @foreach (var order in Model.OrderViewModels)
    {
        <li>@order.OrderDescription - @order.Locations</li>
    }
</ul>

<h2>Payments</h2>
<ul>
    @foreach (var payment in Model.PaymentViewModels)
    {
        <li>@payment.CustomerName - @payment.Locations</li>
    }
</ul>
<p>@Model.ElapsedMilliseconds</p>