@using Ecommerce.ViewModels
@model Ecommerce.ViewModels.ResultViewModel

@{
    ViewBag.Title = "Veri Sonuçları";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f4f7fa;
        margin: 0;
        padding: 40px;
        color: #333;
    }

    .container {
        max-width: 1100px;
        margin: auto;
    }

    h1 {
        text-align: center;
        margin-bottom: 40px;
        color: #2b5876;
        letter-spacing: 1px;
    }

    .elapsed-time {
        background: linear-gradient(135deg, #4e4376, #2b5876);
        color: white;
        padding: 10px 20px;
        border-radius: 10px;
        text-align: center;
        width: fit-content;
        margin: 0 auto 40px auto;
        font-weight: 500;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    section {
        background: white;
        padding: 25px 30px;
        border-radius: 15px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.08);
        margin-bottom: 30px;
        transition: transform 0.2s ease;
    }

        section:hover {
            transform: translateY(-3px);
        }

    h2 {
        color: #2b5876;
        margin-bottom: 15px;
        border-left: 5px solid #4e4376;
        padding-left: 10px;
        font-size: 22px;
    }

    ul {
        list-style-type: none;
        padding: 0;
    }

    li {
        background: #f9f9fc;
        margin-bottom: 8px;
        padding: 12px 16px;
        border-radius: 8px;
        transition: background 0.2s;
        font-size: 16px;
    }

        li:hover {
            background: #eef1f7;
        }

    .back-link {
        display: inline-block;
        text-decoration: none;
        color: white;
        background: linear-gradient(135deg, #4e4376, #2b5876);
        padding: 10px 20px;
        border-radius: 8px;
        transition: background 0.3s ease;
        margin-top: 20px;
    }

        .back-link:hover {
            background: linear-gradient(135deg, #2b5876, #4e4376);
        }

</style>

<div class="container">
    <h1>Veri Sonuçları</h1>

    <div class="elapsed-time">
        İşlem Süresi: <strong>@Model.ElapsedMilliseconds ms</strong>
    </div>

    <section>
        <h2>Şirketler</h2>
        <ul>
            @foreach (var company in Model.CompanyViewModels)
            {
                <li><strong>@company.CompanyName</strong> — @company.CompanyDescription</li>
            }
        </ul>
    </section>

    <section>
        <h2>Müşteriler</h2>
        <ul>
            @foreach (var customer in Model.CustomerViewModels)
            {
                <li><strong>@customer.CustomerName</strong> — @customer.CustomerDescription</li>
            }
        </ul>
    </section>

    <section>
        <h2>Siparişler</h2>
        <ul>
            @foreach (var order in Model.OrderViewModels)
            {
                <li><strong>@order.OrderDescription</strong> — @order.Locations</li>
            }
        </ul>
    </section>

    <section>
        <h2>Ödemeler</h2>
        <ul>
            @foreach (var payment in Model.PaymentViewModels)
            {
                <li><strong>@payment.CustomerName</strong> — @payment.Locations</li>
            }
        </ul>
    </section>

    <div style="text-align:center;">
        <a class="back-link" href="@Url.Action("Index", "Home")">← Ana Sayfaya Dön</a>
    </div>
</div>
